<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:context=".activity.AddFriendActivity">
    
    
    <EditText
            android:id="@+id/et_account_add_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:hint="请输入添加账号"
            android:inputType="number"/>
    
    <ImageView
            android:id="@+id/iv_clear_account_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_account_add_friend"
            android:layout_alignEnd="@id/et_account_add_friend"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_clear_text"
            android:visibility="gone"/>
    
    
    <EditText
            android:id="@+id/et_nickname_add_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_account_add_friend"
            android:layout_margin="30dp"
            android:hint="请输入添加用户昵称"/>
    
    <ImageView
            android:id="@+id/iv_clear_nickname_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_nickname_add_friend"
            android:layout_alignEnd="@id/et_nickname_add_friend"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_clear_text"
            android:visibility="gone"/>
    
    <Button
            android:id="@+id/btn_add_friend"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nickname_add_friend"
            android:text="添加"
            android:textSize="24sp"
            android:background="#1E90FF"
            android:layout_centerInParent="true"/>


</RelativeLayout>